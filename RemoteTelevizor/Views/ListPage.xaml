                <Label Text="Delete" Style="{DynamicResource ButtonLabelStyle}"/>

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnButtonDelete" NumberOfTapsRequired="1" />
                </Frame.GestureRecognizers>

            </Frame>

        </Grid-->

    </StackLayout>

</ContentPage>
